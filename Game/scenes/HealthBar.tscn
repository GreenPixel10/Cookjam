script/source = "extends ProgressBar
class_name HealthBar

var tween_anim: Tween
var anim_time = 0.5


func _setup_health_bar(max_val: float):
	modulate.a = 1.0
	value = max_val
	max_value = max_val
	$ReductionBar.value = max_val
	$ReductionBar.max_value = max_val
	
func change_value(new_value: float):
	value = new_value
	if tween_anim:
		tween_anim.kill()
	tween_anim = create_tween()
	tween_anim.tween_property($ReductionBar, \"value\", new_value, anim_time).set_trans(Tween.TRANS_SINE)
